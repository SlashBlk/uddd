        <activity
            android:name=".activities.HomePage.HomePageActivity"
            android:theme="@style/WithTransiTion" />
        <activity
            android:name=".activities.Main.MainActivity"
            android:theme="@style/WithTransiTion">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>